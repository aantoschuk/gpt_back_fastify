{
  "compilerOptions": {
    "typeRoots": [
      "./node_modules/@types", // Default type definitions
      "./src/types" // Custom type definitions
    ],
    "module": "CommonJS",
    "target": "ES5",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "*" : ["node_modules/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
